{
  "name": "llm-guardian",
  "version": "0.1.0",
  "description": "Git pre-commit hook that detects and fixes common mistakes in LLM-generated code",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "llm-guardian": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "build": "tsc",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "llm",
    "ai",
    "code-quality",
    "git-hook",
    "pre-commit",
    "hallucination-detection",
    "auto-fix"
  ],
  "author": "Kalpesh Jaju",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "commander": "^14.0.1",
    "chalk": "^5.4.1",
    "ora": "^8.1.1",
    "inquirer": "^12.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.56.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
